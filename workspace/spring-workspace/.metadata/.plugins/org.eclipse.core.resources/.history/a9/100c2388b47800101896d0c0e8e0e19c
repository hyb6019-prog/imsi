package kr.co.iei.etc.controller;

import java.io.IOException;
import java.util.ArrayList;
import java.util.List;
import java.util.Random;

import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;
import org.jsoup.nodes.Element;
import org.jsoup.select.Elements;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import com.google.gson.JsonArray;
import com.google.gson.JsonObject;
import com.google.gson.JsonParser;

import kr.co.iei.util.EmailSender;

@Controller
@RequestMapping(value="/api")
public class ApiController {
	
	@Autowired
	private EmailSender mailSender;
	
	
	@GetMapping(value="/busan")
	public String busan() {
		return "etc/busan";
	}
	
	@GetMapping(value="/busanPlace")
	@ResponseBody
	public List busanPlace(String pageNo) {
		List<BusanPlace> list = new ArrayList<BusanPlace>();
		System.out.println("pageNo : "+pageNo);
		String numOfRoiws = "10";
		String serviceKey = "m7P2OkKQHEJq8MDYoGIZM2l90nJbZVBBzQ/2WEiUKiLtxynDTAyNA6PNA6aD6V1sIabA3IuK+1g++2tXsAKz4A==";
		
		String url = "https://apis.data.go.kr/6260000/FoodService/getFoodKr";
		
		//JSON 방식
		try {
			String result = Jsoup.connect(url)
				.data("serviceKey", serviceKey)
				.data("numOfRoiws", numOfRoiws)
				.data("pageNo", pageNo)
				.data("resultType", "json")
				.ignoreContentType(true)
				.get()
				.text();
			System.out.println(result);
			//결과로 받은 문자열을 json타입으로 변환
			JsonObject object = (JsonObject)JsonParser.parseString(result);
			JsonObject getFoodKr = object.get("getFoodKr").getAsJsonObject();
			JsonArray items = getFoodKr.get("item").getAsJsonArray();
			for(int i=0; i<items.size(); i++) {
				JsonObject item = items.get(i).getAsJsonObject();
				String title = item.get("MAIN_TITLE").getAsString();
				String tel = item.get("CNTCT_TEL").getAsString();
				String addr = item.get("ADDR1").getAsString();
				String intro = item.get("ITEMCNTNTS").getAsString();
				String thumb = item.get("MAIN_IMG_THUMB").getAsString();
				BusanPlace bp = new BusanPlace(title, tel, addr, thumb, intro);
				list.add(bp);
			}
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		/*
		//XML 방식
		try {
			Document document = Jsoup.connect(url)  //import org.jsoup.nodes.Document;
								.data("serviceKey", serviceKey)
								.data("numOfRoiws", numOfRoiws)
								.data("pageNo", pageNo)
								.ignoreContentType(true) 		//결과타입을 우리가 원하는형태로 편집해서 사용
								.get();
			//마치 list와 같음	//결과로 받은 문서(XML)에서 item태그만 선택 -> item태그가  numOfRows 만큼 있음
			Elements elements = document.select("item"); //import org.jsoup.select.Elements;
			for(int i=0; i<elements.size(); i++) {
				Element element = elements.get(i);  //import org.jsoup.nodes.Element;
				String title = element.select("MAIN_TITLE").text();
				String tel = element.select("CNTCT_TEL").text();
				String intro = element.select("ITEMCNTNTS").text();
				String addr = element.select("ADDR1").text();
				String thumb = element.select("MAIN_IMG_THUMB").text();
				BusanPlace place = new BusanPlace(title, tel, addr, thumb, intro);
				list.add(place);
			}
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		*/
		return list;
				
	}
	
	@GetMapping(value="/map")
	public String map() {
		return "etc/map";	
	}
	
	@GetMapping(value="/pay")
	public String pay() {
		return "etc/pay";
	}
	
	@GetMapping(value="/email")
	public String email() {
		return "etc/email";
	}
	
	@PostMapping(value="/sendMail")
	public String sendMail(String emailTitle, String receiver, String emailContent) {
		System.out.println("제목 : "+emailTitle);
		System.out.println("받는사람 : "+receiver);
		System.out.println("내용 : "+emailContent);
		mailSender.sendMail(emailTitle,receiver,emailContent);
		return "redirect:/api/email";
	}
	
	@GetMapping(value="/sendCode")
	@ResponseBody
	public void sendCode(String receiver) {
		//인증 메일용 제목 생성
		String emailTitle = "HEO's WORLD 인증메일입니다.";
		//인증 코드 생성
		Random r = new Random();
		StringBuffer sb = new StringBuffer();
		for(int i=0; i<6; i++) {
			//대문자 : r.nextInt(26)+65
			//소문자 : r.nextInt(26)+97
			//숫자(0~9)  : r.nextInt(10)
			int flag = r.nextInt(3);//0 : 숫자, 1 : 대문자, 2 : 소문자
			if(flag == 0) {
				int randomCode = r.nextInt(10);
				sb.append(randomCode);
			}else if(flag == 1) {
				char randomCode = (char)(r.nextInt(26)+65);
				sb.append(randomCode);
			}else if(flag == 2) {
				char randomCode = (char)(r.nextInt(26)+97);
				sb.append(randomCode);
			}
		}
		String emailContent = "<h1>안녕하세요 HEO's WORLD 입니다.</h1>";
		emailContent += "<h3>인증번호는 [";
		emailContent += "<span style='color:red;'>";
		emailContent += sb.toString();
		emailContent += "</span>";
		emailContent += "] 입니다.";
	}
}



















