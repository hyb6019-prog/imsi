<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!-- mybatis와 interface를 연결해주기 -->
<mapper namespace="kr.co.iei.member.model.dao.MemberDao"> 
	<!-- interface 클래스로 만든 memberDao의 매소드를 id로 사용 / 리턴받고 싶은 객체 타입의 경로를 써줌(예-Member클래스의 경로)-->
	<select id="selectAllMember" resultType="Member"> 
		select * from member_tbl order by 1 desc
	</select>
	<!-- insert/update/delete는 수행결과가 무조건 int로 정해져있으므로 resultType을 작성하지 않음 -->
	<insert id="insertMember">
		<!-- 
		mybatis
		$가 아닌 #을 씀 
		전달받는 매개변수가 무조건 1개여야만 함
		-->
		insert into member_tbl values(member_seq.nextval,#{memberId},#{memberPw},#{memberName},#{memberPhone},#{memberAddr},3,to_char(sysdate, 'yyyy-mm-dd'))
	</insert>
	<select id="selectOneMember" resultType="Member">
		select * from member_tbl where member_id = #{memberId}
	</select>
</mapper>
